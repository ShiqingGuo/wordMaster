<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SettingsFragment"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:background="@color/beige"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_extralarge"
            android:text="Settings"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="20dp"
            />
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_account_wrapper"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@color/white"
            >
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user"
                android:id="@+id/user_icon"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_icon"
                android:text="@string/settings_user_id"
                android:textSize="@dimen/font_size_large"
                android:layout_marginLeft="20dp"
                android:id="@+id/settings_user_id"
                />
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:layout_centerVertical="true"
                />
        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_orange"
                android:text="logout"
                android:layout_marginLeft="70dp"
                android:layout_below="@id/settings_user_id"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_logout"
                android:textColor="@color/black"
                android:stateListAnimator="@animator/button_press_anim"
                />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today_learning_goals"
                android:textSize="@dimen/font_size_normal"
                android:layout_marginHorizontal="5dp"
                />
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="10dp"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review Word"
                        android:textSize="@dimen/font_size_normal"
                        />
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="0dp"
                        >
                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="100"
                            android:textSize="@dimen/font_size_normal"
                            android:padding="0dp"
                            android:id="@+id/review_word_num"
                            />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_word"
                        android:textSize="@dimen/font_size_normal"
                        />
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="0dp"
                        >
                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="100"
                            android:textSize="@dimen/font_size_normal"
                            android:padding="0dp"
                            android:id="@+id/new_word_num"
                            />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

    </LinearLayout>





</LinearLayout>